{
  "dashboard": {
    "id": null,
    "title": "gRPC Services Performance",
    "tags": ["grpc", "microservices", "performance"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "gRPC Requests Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(grpc_requests_total[5m])) by (job)",
            "refId": "A",
            "legendFormat": "{{job}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "yAxes": [
          {
            "label": "Requests/sec"
          }
        ]
      },
      {
        "id": 2,
        "title": "gRPC Response Time (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(grpc_request_duration_seconds_bucket[5m])) by (le, job))",
            "refId": "A",
            "legendFormat": "{{job}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "yAxes": [
          {
            "label": "Seconds"
          }
        ]
      },
      {
        "id": 3,
        "title": "Service Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "service_health",
            "refId": "A",
            "legendFormat": "{{job}}"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 24,
          "x": 0,
          "y": 8
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "value": 1,
                "text": "Healthy"
              },
              {
                "value": 0,
                "text": "Unhealthy"
              }
            ],
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Orders Processed",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(orders_processed_total[1m]))",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 14
        }
      },
      {
        "id": 5,
        "title": "Payments Processed",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(payments_processed_total[1m]))",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 14
        }
      },
      {
        "id": 6,
        "title": "Notifications Sent",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(notifications_sent_total[1m]))",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 14
        }
      },
      {
        "id": 7,
        "title": "GraphQL Queries",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(graphql_queries_total[1m]))",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 14
        }
      }
    ]
  }
}